{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "simple-crud-api-rsschool",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --exec ts-node-dev src/index.ts",
    "start:dev": "npm run start",
    "start:prod": "npm run build && node dist/index.js",
    "start:multi": "nodemon --exec ts-node-dev src/balancer.ts",
